#!/bin/sh

if [ $JAVA_HOME ]
then
    javac=$JAVA_HOME/bin/javac
else
    javac=javac
fi
jsr308c="$javac -J-Xbootclasspath/p:$JSR308/checkers/binary/jsr308-all.jar"

jilldir=`dirname $0`/..
jilljar=$jilldir/build/jill.jar
jxjar=$jilldir/build/jillexample.jar
jxchecker=jillexample.ExampleChecker

command="$jsr308c -Xbootclasspath/a:$jilljar:$jxjar -processorpath $jilljar:$jxjar -processor $jxchecker $*"
exec $command
